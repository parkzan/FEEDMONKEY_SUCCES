<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="com.example.parkzan.feedmonkey.Main4Activity">

    <LinearLayout
        android:layout_width="417dp"
        android:layout_height="606dp"
        android:orientation="horizontal"
        android:weightSum="1"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="302dp"
            android:layout_height="314dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:layout_weight="0.62"
            android:animateLayoutChanges="?attr/windowActionBar"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="3dp"
                android:orientation="vertical"
                android:visibility="visible"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:text="GAME OVER"
                    android:textColor="#b50f0c"
                    android:textSize="40dp"
                    android:textStyle="bold|italic" />

                <LinearLayout
                    android:layout_width="297dp"
                    android:layout_height="52dp"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_gravity="center"
                    android:layout_marginLeft="55dp"
                    android:layout_weight="0.24">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="80dp"
                        android:layout_height="81dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="30dp"
                        android:layout_weight="0.43"
                        android:text="Score : "
                        android:textSize="35dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_score_4"
                        android:layout_width="116dp"
                        android:layout_height="54dp"
                        android:layout_marginTop="25dp"
                        android:text="5000"
                        android:textSize="35dp"
                        android:textStyle="bold"
                        android:layout_weight="0.26" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="30dp"
                    android:text="HightScore : 1000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/replay"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@mipmap/ic_replay_black_24dp" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
